@page "/version"

@inject CatalogService CatalogService;

@using System.Reflection;
@using System.Runtime.InteropServices;
@using ApisOfDotNet.Services;

<div class="mt-3 container-fluid">
    <div class="mx-auto col-md-5">
        <h3>
            Deployed Version
        </h3>
        <table class="table table-striped">
            @if (_commit is not null)
            {
                <tr>
                    <th>Commit</th>
                    <td><a href="https://github.com/dotnet/apisof.net/commit/@(_commit)">@_commit</a></td>
                </tr>
            }
            <tr>
                <th>Framework</th>
                <td>@RuntimeInformation.FrameworkDescription</td>
            </tr>
            <tr>
                <th>OS</th>
                <td>@RuntimeInformation.OSDescription</td>
            </tr>
            <tr>
                <th>Catalog Version</th>
                <td>@_catalogVersion</td>
            </tr>
        </table>
    </div>
</div>