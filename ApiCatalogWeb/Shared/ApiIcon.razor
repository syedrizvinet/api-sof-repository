@using PackageIndexing; 

<img height="16" width="16" src="@Url" />

@code {
    [Parameter]
    public ApiKind Kind { get; set; }

    public string Url { get; set; }

    protected override void OnParametersSet()
    {
        var name = Kind.ToString();

        if (Kind == ApiKind.Constructor ||
            Kind == ApiKind.Destructor ||
            Kind == ApiKind.Operator)
        {
            name = "method";
        }

        Url = $"/img/{name}.svg";
    }
}
